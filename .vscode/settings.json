{
  "editor.formatOnSave": true,
  "editor.wordWrap": "wordWrapColumn",
  "editor.wrappingIndent": "same",

  "python.formatting.blackPath": "~/.pyenv/versions/3.10.5/envs/musicApp-api-3.10.5/bin/black",
  "python.formatting.blackArgs": ["--line-length=100"],
  // Starting Isort 5.0, we we can easily configure Isort to match Blackâ€™s settings by passing args
  "python.sortImports.args": ["--profile", "black"],

  "[python]": {
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    },
    "editor.formatOnSave": true
  },

  "python.linting.pylintEnabled": true,
  // Detects unused imports
  "python.linting.pylintArgs": ["--enable=W0614"]
}
